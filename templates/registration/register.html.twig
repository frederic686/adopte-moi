{% block content %}
  <link rel="stylesheet" href="{{ asset('css/forms.css') }}">

  <div class="form-container">
    <h1>Créer mon compte</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
      {{ form_row(registrationForm.email, { label: 'Email' }) }}
      {{ form_row(registrationForm.nom,   { label: 'Nom' }) }}
      {{ form_row(registrationForm.ville, { label: 'Ville' }) }}
      {{ form_row(registrationForm.photoFile, { label: 'Photo de profil (optionnel)' }) }}
      {{ form_row(registrationForm.plainPassword.first,  { label: 'Mot de passe' }) }}
      {{ form_row(registrationForm.plainPassword.second, { label: 'Confirmez le mot de passe' }) }}

      {% if registrationForm.isEleveur is defined %}
        {{ form_row(registrationForm.isEleveur, { label: 'Je suis éleveur' }) }}
      {% endif %}
      {% if registrationForm.agreeTerms is defined %}
        {{ form_row(registrationForm.agreeTerms, { label: "J'accepte les CGU" }) }}
      {% endif %}

      <button type="submit" class="btn">S’inscrire</button>
    {{ form_end(registrationForm) }}
  </div>
{% endblock %}
